@model AHP2.Models.ProjectViewModels
@{
    ViewBag.Title = "IndexProject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-offset-4 col-md-4">
        <h2>Projects</h2>
    </div>
</div>
<div class="row">
    <div class="col-md-offset-3 col-md-6 well well-sm">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Project name</th>
                    <th>Date</th>
                </tr>
            </thead>
            @foreach (var p in Model.Projects)
            {
                <tbody>
                    <tr>
                        <td>@p.Name</td>
                        <td>@p.CreateAt.ToShortDateString()</td>
                    </tr>
                </tbody>
            }
        </table>
        @Html.ActionLink("Create new", "Create", new { id = Model.User.Id })
    </div>
</div>


